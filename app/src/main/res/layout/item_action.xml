<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/viewSeparator"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#E4E4E4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/ic_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSubPlayer1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="@dimen/container_padding"
        android:layout_marginTop="@dimen/container_padding"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivPlayer1" />

    <ImageView
        android:id="@+id/ivPlayer1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="@dimen/container_padding"
        android:layout_marginTop="@dimen/container_medium_padding"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAction1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/container_small_padding"
        android:textColor="@color/grey_1"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toEndOf="@id/ivPlayer1"
        app:layout_constraintTop_toTopOf="@id/ivPlayer1" />

    <TextView
        android:id="@+id/txtPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/standard_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txtAction1"
        app:layout_constraintTop_toBottomOf="@id/txtAction1" />

    <TextView
        android:id="@+id/txtSubPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_1"
        android:textSize="@dimen/standard_text_size"
        app:layout_constraintStart_toStartOf="@id/txtAction1"
        app:layout_constraintTop_toBottomOf="@id/txtPlayer1" />

    <ImageView
        android:id="@+id/ivAction1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/container_padding"
        android:contentDescription="@null"
        app:layout_constraintEnd_toStartOf="@id/viewSeparator"
        app:layout_constraintTop_toTopOf="@id/txtAction1" />

    <ImageView
        android:id="@+id/ivSubPlayer2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="@dimen/container_padding"
        android:layout_marginEnd="@dimen/container_padding"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivPlayer2" />

    <ImageView
        android:id="@+id/ivPlayer2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="@dimen/container_medium_padding"
        android:layout_marginEnd="@dimen/container_padding"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAction2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/container_small_padding"
        android:textColor="@color/grey_1"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintEnd_toStartOf="@id/ivPlayer2"
        app:layout_constraintTop_toTopOf="@id/ivPlayer2" />

    <TextView
        android:id="@+id/txtPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/standard_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/txtAction2"
        app:layout_constraintTop_toBottomOf="@id/txtAction2" />

    <TextView
        android:id="@+id/txtSubPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_1"
        android:textSize="@dimen/standard_text_size"
        app:layout_constraintEnd_toEndOf="@id/txtAction2"
        app:layout_constraintTop_toBottomOf="@id/txtPlayer2" />

    <ImageView
        android:id="@+id/ivAction2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/container_padding"
        android:contentDescription="@null"
        app:layout_constraintStart_toEndOf="@id/viewSeparator"
        app:layout_constraintTop_toTopOf="@id/txtAction2" />

</androidx.constraintlayout.widget.ConstraintLayout>